<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CCBMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ccb_green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ccb_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="statusBarBackground">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="backgroundColor">@color/ccb_belge</item>
        <item name="android:windowBackground">@color/ccb_belge</item>
        <item name="android:autoCompleteTextViewStyle">@style/CustomDropdownMenu</item>
    </style>

    <style name="CustomDropdownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:popupBackground">@drawable/semi_rounded_background</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">@dimen/_13ssp</item> <!-- Adjust the text size as needed -->
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:windowBackground">@drawable/semi_rounded_background</item>
    </style>

    <style name="MyTitleTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/_24ssp</item>
    </style>

    <style name="CustomSearchViewStyle" parent="@style/Widget.AppCompat.SearchView">
        <item name="android:textColorHint">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>


</resources>
