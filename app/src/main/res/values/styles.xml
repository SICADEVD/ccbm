<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonStyle.Submit" parent="Theme.CCBMobile">
        <item name="android:background">@drawable/submit_button_bg</item>
        <item name="android:textColor">@drawable/submit_button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="statusBarBackground">@color/black</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="OptionsButton" parent="Theme.MaterialComponents">
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:elevation">15dp</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconSize">20dp</item>
        <item name="iconGravity">start</item>
        <item name="cornerRadius">13dp</item>
    </style>

    <style name="OptionsButton_Active" parent="OptionsButton">
        <item name="backgroundTint">@color/green</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="custom_progress_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item> <!-- Set your desired text color here -->
    </style>

</resources>
