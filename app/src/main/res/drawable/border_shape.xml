<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_25sdp" />
            <solid android:color="@color/progband_green" /> <!-- Shadow color -->
        </shape>
    </item>

    <!-- Main Shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_25sdp" />
            <stroke
                android:width="@dimen/_2sdp"
                android:color="@color/progband_gris" />
        </shape>
    </item>
</layer-list>
