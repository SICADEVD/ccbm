<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp" />
            <solid android:color="@color/progband_light_green" /> <!-- Shadow color -->
        </shape>
    </item>

    <!-- Main Shape -->
    <item android:right="@dimen/shadow_size"
        android:left="@dimen/shadow_size"
        android:top="@dimen/shadow_size"
        android:bottom="@dimen/shadow_size">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>
</layer-list>