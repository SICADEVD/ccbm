<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_1sdp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="25dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_cardview_with_border"
        android:backgroundTint="@color/white"
        >

        <RelativeLayout
            android:id="@+id/linearProducteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="330dp"
                android:src="@drawable/producteurc"
                android:scaleType="centerCrop"
                android:id="@+id/image_current" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_5sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/feature_tv_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRODUCTEUR"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_26ssp"
                android:fontFamily="@font/montserrat_extrabold"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginVertical="@dimen/_2sdp"
                android:layout_below="@+id/image_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/border_shape_selector"
                    android:id="@+id/add_new_item"
                    android:minWidth="@dimen/_60sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_gravity="end"
                    android:layout_weight=".8"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_add_all_white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/border_shape_selector"
                    android:id="@+id/btn_edit"
                    android:minWidth="@dimen/_60sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_gravity="end"
                    android:layout_weight=".8"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_edit_white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/border_shape_selector"
                    android:id="@+id/btn_sync"
                    android:minWidth="@dimen/_60sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_gravity="end"
                    android:layout_weight=".8"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/baseline_sync_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:background="@drawable/border_shape_selector"
                    android:id="@+id/btn_draft"
                    android:minWidth="@dimen/_60sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_gravity="end"
                    android:layout_weight=".8"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/baseline_archive_white" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:background="@drawable/border_shape"
            android:fontFamily="@font/montserrat_medium"
            android:backgroundTint="@color/blue"
            android:id="@+id/tv_current_sync"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="0"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="1 701" />

        <androidx.appcompat.widget.AppCompatTextView
            android:background="@drawable/border_shape"
            android:backgroundTint="@color/red_title"
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/tv_current_draft"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="0"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="1 701" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>