<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/labelTitleLivraison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIVRAISON"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        />

    <LinearLayout
        android:id="@+id/linearNombreContainer"
        android:layout_below="@+id/labelTitleLivraison"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:layout_height="wrap_content"
                android:text="Nombre de sacs: "
                />

            <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                android:id="@+id/labelNombreSacsLivraison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="21"
                />


        </LinearLayout>

        <Space
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_10sdp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:layout_height="wrap_content"
                android:text="Volume livrÃ©: "
                />

            <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                android:id="@+id/labelVolumeLivreLivraison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="28"
                />

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSyncedDoneLivraison"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/linearNombreContainer"
        app:srcCompat="@drawable/ic_sync_donz" />

    <LinearLayout
        android:layout_toEndOf="@+id/labelTitleLivraison"
        android:layout_alignBottom="@+id/labelTitleLivraison"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/labelTitleLivraison"
        android:gravity="end|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_9ssp"
                android:layout_height="wrap_content"
                android:text="Date: "
                />

            <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                android:id="@+id/labelDateLivraison"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/_8ssp"
                android:layout_height="wrap_content"
                tools:text="21-12-2021"
                />

    </LinearLayout>


</RelativeLayout>