<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingEnd="@dimen/_16sdp"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearSuiviContainerItem"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:text="Producteur : "/>

            <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                android:id="@+id/labelProducteurSuivi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BOKA KADJO SERGE DIDIER CEDRIC"
                android:textSize="@dimen/_11ssp"
                
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp">

            <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcelle : "
                android:gravity="bottom"
                android:textSize="@dimen/_12ssp"
                />

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                android:id="@+id/labelSuiviNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                tools:text="HEVEA"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp">

                <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Superficie"
                    android:gravity="bottom"
                    android:textSize="@dimen/_11ssp"
                    />

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                    android:id="@+id/labelSuperficeSuivi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    tools:text="1.89 Km"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    />

            </LinearLayout>

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10ssp"/>

            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp">

                <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visite"
                    android:gravity="bottom"
                    android:textSize="@dimen/_11ssp"
                    />

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
android:textColor="@color/text_color_white"
                    android:id="@+id/labelDateVisiteSuivi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    tools:text="12-12-2021"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSyncedSuivi"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        tools:src="@drawable/ic_sync_donz"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/linearSuiviContainerItem"
        android:layout_marginBottom="@dimen/_minus5sdp"/>

</RelativeLayout>