                        android:id="@+id/selectProducteurSsrt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_37sdp"/>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
