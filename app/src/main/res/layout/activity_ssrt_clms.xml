            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:background="@drawable/rounded_background">

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_10sdp" />

