        android:id="@+id/labelInfosScrollerSsrt"
        android:freezesText="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:ellipsize="marquee"
        android:textSize="@dimen/_12ssp"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:text="Seul les personnes de 3 à 17ans partageant le même repas et la même maison du producteur sont concernées par cette enquête. Commencer du plus grand au plus petit"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp" />

