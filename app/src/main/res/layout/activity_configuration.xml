<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConfigurationActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_margin="@dimen/_16sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelIndicatorConfiguration"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/black"
            android:lines="2"
            android:gravity="center"
            android:maxLines="2"
            android:text="Configuration en cours…"/>

        <ProgressBar
            android:id="@+id/loaderConfiguration"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/actionUpdate"
            style="@style/ButtonStyle.Submit"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_horizontal"
            android:text="Mise à jour"
            android:textAllCaps="true"
            android:textSize="@dimen/_13ssp" />

    </LinearLayout>

</RelativeLayout>
