<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearProducteurContainer"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/text_color_white"
        android:id="@+id/labelQuestionInspectionItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5.5"
        android:paddingLeft="@dimen/_12sdp"
        android:text="Title"
        android:textSize="@dimen/_11ssp"
        
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.5"
        android:background="@drawable/rounded_background">

        <Space
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_10sdp" />

        <androidx.appcompat.widget.AppCompatSpinner
            style="@style/SpinnerItemStyle"
            android:id="@+id/selectResponseInspectionItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            android:spinnerMode="dialog" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lastCommentContainer"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginVertical="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/text_color_white"
            android:layout_weight="2.0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_12sdp"
            android:text="Commentaire: "
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLastCommentNonConform"
            android:textColor="@color/text_color_white"
            android:layout_width="0dp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:text="Content Producteur"
            android:textSize="@dimen/page_input_title_dim11"
            android:layout_weight="2.5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/commentContainer"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginVertical="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5">

        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/text_color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_12sdp"
            android:id="@+id/textInspecItemRecommandTitle"
            android:text="Commentaire"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editCommentItemQuestInspect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/background_present"
            android:inputType="textMultiLine|textNoSuggestions"
            android:gravity="top"
            android:hint=""
            android:imeOptions="actionDone"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_13ssp"
            tools:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/commentNonConforme"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginVertical="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:weightSum="4">

            <LinearLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/text_color_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_12sdp"
                    android:text="Délai d'exécution"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editDateDelaiInspectItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:editable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:hint="JJ-MM-AAAA"
                        android:inputType="textCapCharacters"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_13ssp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/text_color_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_12sdp"
                    android:text="Date de vérification"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editDateVerifInspectItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:editable="false"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:hint="JJ-MM-AAAA"
                        android:inputType="textCapCharacters"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_13ssp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/text_color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_12sdp"
            android:text="Statut"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background">

            <androidx.appcompat.widget.AppCompatSpinner
                style="@style/SpinnerItemStyle"
                android:entries="@array/statutsInspect"
                android:id="@+id/selectStatutsInspectionItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:spinnerMode="dialog" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
