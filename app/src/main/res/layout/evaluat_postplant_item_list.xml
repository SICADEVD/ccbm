<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/postplant_height"
    android:layout_height="@dimen/_90sdp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:weightSum="10"
            android:gravity="left"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:tag="arbreId"
                android:id="@+id/item_arbre_id"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/_14ssp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="1"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:tag="arbreNom"
                    android:id="@+id/item_dist_title"
                    android:maxLines="2"
                    android:textFontWeight="500"
                    android:textColor="@color/text_color_white"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textSize="@dimen/_12ssp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Acajou bassam"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:textFontWeight="300"
                    android:textColor="@color/text_color_white"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textSize="@dimen/_10ssp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Qte reçue"
                    />

                <Space
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="wrap_content"></Space>

                <androidx.appcompat.widget.AppCompatTextView
                    android:tag="arbreQteList"
                    android:id="@+id/item_qte_recu"
                    android:textColor="@color/red_title"
                    android:textSize="@dimen/_13ssp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="51"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:paddingHorizontal="@dimen/_3sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatEditText
                    android:tag="qtePlante"
                    android:id="@+id/item_quant_plante"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:background="@drawable/semi_rounded_background"
                    android:hint="Qte plantée"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/page_input_content_dim13"
                    tools:text="Qte plantée" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_3sdp"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatEditText
                    android:tag="qteSurvecue"
                    android:id="@+id/item_quant_surve"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:background="@drawable/semi_rounded_background"
                    android:hint="Qte survécue"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/page_input_content_dim13"
                    tools:text="Qte survécue" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            android:paddingHorizontal="@dimen/_3sdp"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatEditText
                android:tag="qteComment"
                android:id="@+id/item_quant_comment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:background="@drawable/semi_rounded_background"
                android:hint="Commentaire"
                android:textAlignment="center"
                android:ellipsize="end"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textAllCaps="true"
                android:textSize="@dimen/page_input_content_dim13"
                tools:text="Commentaire" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_1sdp"
            android:background="@color/ccb_gris_sec" />


    </LinearLayout>

</RelativeLayout>