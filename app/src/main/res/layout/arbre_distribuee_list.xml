<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:weightSum="10"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:tag="arbreId"
            android:id="@+id/item_dist_id"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/_14ssp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Space
                android:layout_width="@dimen/_15sdp"
                android:layout_height="wrap_content"></Space>

            <androidx.appcompat.widget.AppCompatTextView
                android:tag="arbreNom"
                android:id="@+id/item_dist_title"
                android:textFontWeight="500"
                android:textColor="@color/text_color_white"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textSize="@dimen/_12ssp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Acajou bassam"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Space
                android:layout_width="@dimen/_15sdp"
                android:layout_height="wrap_content"></Space>

            <androidx.appcompat.widget.AppCompatTextView
                android:tag="arbreLimit"
                android:id="@+id/item_dist_limit"
                android:textColor="@color/red_title"
                android:textSize="@dimen/_15ssp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="51"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatEditText
                android:tag="arbreQte"
                android:id="@+id/item_dist_quant"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:background="@drawable/rounded_background"
                android:hint="500"
                android:textAlignment="center"
                android:ellipsize="end"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textAllCaps="true"
                android:textSize="@dimen/page_input_content_dim13"
                tools:text="500" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>