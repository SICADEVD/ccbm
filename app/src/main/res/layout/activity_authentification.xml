<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AuthentificationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_30sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@mipmap/ic_launcher" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp" />

<!--            <androidx.appcompat.widget.AppCompatTextView-->
<!--                android:id="@+id/textindicatif"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginBottom="15dp"-->
<!--                android:text="Connectez-vous !"-->
<!--                android:textColor="@android:color/black"-->
<!--                android:textSize="28sp"-->
<!--                android:textStyle="bold" />-->

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


<!--                <androidx.appcompat.widget.AppCompatTextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Nom d'utilisateur"-->
<!--                    android:textColor="@color/black" />-->

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/inputLogin"
                    android:hint="Nom d'utilisateur"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:layout_gravity="center_horizontal"
                    android:inputType="textCapCharacters|textNoSuggestions|textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rounded_background"
                    android:paddingLeft="16dp"/>

            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<!--                <androidx.appcompat.widget.AppCompatTextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Mot de passe"-->
<!--                    android:textColor="@color/black" />-->

                <androidx.appcompat.widget.AppCompatEditText
                    android:textAllCaps="true"
                    android:id="@+id/inputPassword"
                    android:layout_gravity="center_horizontal"
                    android:inputType="textNoSuggestions|textPassword"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/rounded_background"
                    android:hint="Mot de passe"
                    android:paddingLeft="16dp"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_16sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/actionAuthentification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accéder à mon comptext"
                app:icon="@drawable/ic_sync"
                app:iconGravity="start"
                style="@style/OptionsButton_Active"
                app:cornerRadius="50dp"
                android:backgroundTint="@color/brown_logo"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                android:layout_marginRight="0dp"
                android:elevation="0dp"/>


        </LinearLayout>

    </ScrollView>


    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="gone"
        android:id="@+id/imgBackAuth"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:padding="@dimen/_5sdp"
        app:srcCompat="@drawable/ic_back_black" />

</RelativeLayout>

